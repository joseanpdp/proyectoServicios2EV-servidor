    </padding>
   <ImageView fitHeight="56.0" fitWidth="56.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../img/logo.png" />
      </image>
   </ImageView>
   <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" prefHeight="424.0" prefWidth="300.0">
       <TextFlow fx:id="textFlow" prefHeight="200.0" prefWidth="292.0" />
   </ScrollPane>
   <HBox alignment="CENTER" prefHeight="48.0" prefWidth="326.0">
      <children>
         <TextField fx:id="textField" maxWidth="-Infinity" minWidth="202.0" onKeyPressed="#onKeyPressedTextField"  promptText="Ingrese el mensaje" prefHeight="24.0" prefWidth="202.0">
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </TextField>
          <Button fx:id="sendButton" onAction="#onActionSendButton" prefHeight="25.0" prefWidth="91.0" style="-fx-background-color: #209cf4;" text="Enviar" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Button>
      </children>
   </HBox>

</VBox>
